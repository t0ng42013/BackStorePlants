{
    "version": 2,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "builds": [
        {
            "src": "src/app.js", 
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api-docs/(.*)",
            "dest": "/api-docs/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/src/app.js"
        }
    ]
}